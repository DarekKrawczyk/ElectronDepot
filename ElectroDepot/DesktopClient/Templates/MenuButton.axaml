<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:DesktopClient.Templates">

  <Design.PreviewWith>
    <StackPanel>      
        <StackPanel>
          <controls:MenuButton/>
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type controls:MenuButton}" TargetType="controls:MenuButton">
    
    <Setter Property="Template">
      <ControlTemplate>
        <Border BorderBrush="{DynamicResource UIDarkGray}" 
                BorderThickness="1" >
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="35" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="0" />
              <ColumnDefinition Width="50" />
              <ColumnDefinition Width="0" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>

            <!-- Placeholder Column -->
            <Grid Grid.Row="0" Grid.Column="0" />

            <!-- Icon Column -->
            <Grid Grid.Row="0" Grid.Column="1">
              <Image Source="{TemplateBinding Icon}" 
                     x:Name="Icon1"
                     Width="32" 
                     Margin="0,0,0,0"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
            </Grid>            

            <!-- Placeholder Column -->
            <Grid Grid.Row="0" Grid.Column="2" />

            <!-- Label Column -->
            <Grid Grid.Row="0" Grid.Column="3">
              <Label FontSize="18"
                     x:Name="Lable1"
                     Content="{TemplateBinding Name}" 
                     FontFamily="{StaticResource Roboto}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">
                
              </Label>
            </Grid>

            <!-- Placeholder Column -->
            <Grid Grid.Row="0" Grid.Column="4" />
          </Grid>
          
          <!-- Border Style for Hover and Pressed States -->
          <Border.Styles>
            <Style Selector="Border">
              <Setter Property="Background" Value="{DynamicResource UIDeepPurple}"/>
              <Setter Property="Padding" Value="2"></Setter>
              <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{DynamicResource UIAccentPurple}"/>
              </Style>
              <Style Selector="^:pressed">
                <Setter Property="Background" Value="{DynamicResource UIOffWhite}"/>
              </Style>
            </Style>
          </Border.Styles>
        </Border>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
